rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can read their own profile, admins can read all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Work logs - users can read their own logs, admins can read all
    match /workLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Tasks - assigned users and admins can read, only admins can create/update
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.token.admin == true;
      allow update: if request.auth != null && request.auth.token.admin == true;
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Announcements - everyone can read, only admins can create/delete
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Contracts - users can read, only admins can write
    match /contracts/{contractId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Contract signatures - users can read their own, admins can read all
    match /contractSignatures/{signatureId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
