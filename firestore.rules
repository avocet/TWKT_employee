rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Accounts - publicly readable for login, only admin can write
    match /accounts/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'avocetmac@gmail.com';
    }
    
    // Users - requires authentication to read/write
    match /users/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Work logs - requires authentication
    match /workLogs/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Tasks - requires authentication  
    match /tasks/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Announcements - requires authentication
    match /announcements/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Contracts - requires authentication
    match /contracts/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Contract signatures - requires authentication
    match /contractSignatures/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
