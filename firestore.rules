rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Accounts and users collections - publicly readable for login lookup
    match /accounts/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'avocetmac@gmail.com';
    }
    
    match /users/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'avocetmac@gmail.com';
    }
    
    // All other collections require authentication
    match /{collection}/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
